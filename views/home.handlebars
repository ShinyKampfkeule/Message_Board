<script>
    'use strict';
    (function () {
        function init() {
            var completedate = new Date();
            var day = completedate.getDate();
            day = day.toString();
            var month = completedate.getMonth() + 1;
            month = month.toString();
            var year = completedate.getFullYear();
            year = year.toString();
            var completedate2 = (day + "." + month + "." + year);
            document.getElementById('loc')
                    .innerHTML = completedate2/*.toLocaleString('de-DE');*/
        }
        document.addEventListener("DOMContentLoaded", function () {
            init();
        });
    }());
</script>
<script>
    'use strict';
    (function () {
        function uhrzeit() {
            var jetzt = new Date(),
                    h = jetzt.getHours(),
                    m = jetzt.getMinutes(),
                    s = jetzt.getSeconds();
            m = fuehrendeNull(m);
            s = fuehrendeNull(s);
            document.getElementById('uhr')
                    .innerHTML = h + ':' + m + ':' + s;
            setTimeout(uhrzeit, 500);
        }

        function fuehrendeNull(zahl) {
            zahl = (zahl < 10 ? '0' : '') + zahl;
            return zahl;
        }
        document.addEventListener('DOMContentLoaded', uhrzeit);
    }());

</script>
